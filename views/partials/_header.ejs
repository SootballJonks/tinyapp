<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls" style="font-size:  x-large;">Smol-Links</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
      <% if (user_id) { %>
        <h4 style="color: #fff; padding-right: 10px;">Hello, <%= JSON.parse(user_id).email %>! </h4>
        <form class="form-inline" method="POST" action="/logout">
          <button type="submit" name="user_id" class="btn btn-dark">Log Out</button>
        </form>
      <% } else { %>
        <form class="form-inline" method="GET" action="/login">
          <button type="submit" class="btn btn-dark" style="margin-right: 5px; margin-left: 10px;">Log In</button>
        </form>
        <form class="form-inline" method="GET" action="/register">
          <button type="submit" class="btn btn-dark" style="margin-right: 10px; margin-left: 5px;">Register</button>
        </form>
      <% } %>
  </nav>
</header>
